{
	"name": "abc",
	"version": "1.0.0",
	"description": "A starter theme for WordPress.",
	"author": "Justin Tadlock",
	"license": "GPL-2.0+",
	"homepage": "https://github.com/justintadlock/abc#readme",
	"main": "index.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"hot": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
		"build": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
		"lint": "npm run lint:styles && npm run lint:scripts",
		"lint:styles": "stylelint './resources/styles/**/*.scss' --syntax scss",
		"lint:scripts": "eslint './resources/scripts/**/*.js'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/justintadlock/abc.git"
	},
	"bugs": {
		"url": "https://github.com/justintadlock/abc/issues"
	},
	"devDependencies": {
		"browser-sync": "^2.24.4",
		"browser-sync-webpack-plugin": "2.0.1",
		"copy-webpack-plugin": "^4.5.1",
		"cross-env": "^5.2.0",
		"imagemin-mozjpeg": "^6.0.0",
		"imagemin-webpack-plugin": "^2.1.5",
		"laravel-mix": "^2.1.0",
		"postcss-preset-env": "^5.1.0",
		"sass-mq": "^4.0.2"
	}
}
